# Database Configuration
# For local MongoDB (requires MongoDB installation)
MONGODB_URI=mongodb://localhost:27017/telehealth

# For MongoDB Atlas (cloud database - recommended for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/telehealth?retryWrites=true&w=majority

# JWT Secret (change this in production!)
JWT_SECRET=telehealth_secret_key_change_in_production_please

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Port
PORT=4000

# Twilio Configuration (Optional - for SMS notifications)
# Get these from https://console.twilio.com/
# Leave as placeholder values to disable Twilio features
TWILIO_ACCOUNT_SID=disabled
TWILIO_AUTH_TOKEN=disabled
TWILIO_PHONE_NUMBER=+15551234567

# Stripe Configuration (Optional - for payments)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Environment
NODE_ENV=development